@model AgriEnergyConnect1.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<div class="alert alert-warning">
    <h4>What happened?</h4>
    <p>Something went wrong with your request. Our technical team has been notified about this issue.</p>

    <h4>What can you do?</h4>
    <ul>
        <li>Try refreshing the page</li>
        <li>Go back to the <a asp-controller="Home" asp-action="Index">homepage</a></li>
        <li>Try again later if the problem persists</li>
    </ul>
</div> 