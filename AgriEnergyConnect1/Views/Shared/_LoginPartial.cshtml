@using Microsoft.AspNetCore.Identity
@using AgriEnergyConnect1.Data
@using AgriEnergyConnect1.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext DbContext

@{
    string fullName = null;
    if (SignInManager.IsSignedIn(User))
    {
        var userId = UserManager.GetUserId(User);
        if (User.IsInRole("Farmer"))
        {
            var farmer = DbContext.Farmers.FirstOrDefault(f => f.UserId == userId);
            if (farmer != null)
            {
                fullName = farmer.Name;
            }
        }
        else if (User.IsInRole("Employee"))
        {
            var employee = DbContext.Employees.FirstOrDefault(e => e.UserId == userId);
            if (employee != null)
            {
                fullName = employee.Name;
            }
        }
    }
}
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hello @(fullName ?? User.Identity?.Name)!</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>